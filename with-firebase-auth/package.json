{
  "name": "with-firebase",
  "displayName": "Firebase Plasmo example",
  "version": "0.0.0",
  "description": "Showcasing how easy it is to have auth with Plasmo.",
  "author": "coldsauce",
  "packageManager": "pnpm@6.31.0",
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build"
  },
  "dependencies": {
    "firebase": "^9.9.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "workspace:*",
    "@types/chrome": "0.0.193",
    "@types/node": "18.6.1",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "plasmo": "workspace:*",
    "prettier": "2.7.1",
    "typescript": "4.7.4"
  },
  "manifest": {
    "key": "TODO: PUT YOUR OWN KEY HERE",
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "identity"
    ],
    "oauth2": {
      "client_id": "$PLASMO_PUBLIC_FIREBASE_CLIENT_ID",
      "scopes": [
        "https://www.googleapis.com/auth/userinfo.email",
        "https://www.googleapis.com/auth/userinfo.profile"
      ]
    }
  }
}
